{% extends 'admin/base.html.twig' %}

{% block main %}
    {{ form_start(categorieForm) }}
    <section class="border border-grey w-50 mt-5 p-3 m-auto mb-5 bg bg-dark text-light rounded">

        <h1 class="text-center">Ajouter une catégorie</h1>

        <div class="m-4 ">
            {{ form_errors(categorieForm.title) }}
            {#permet de rendre le label du champs title #}
            {{ form_label(categorieForm.title , 'TITRE',{'label_attr': {'class': 'form-label'}}) }}
            {#permet de rendre l'input du champs title #}
            {{ form_widget(categorieForm.title , {'attr': {'class': 'form-control', 'placeholder': 'remplissez le titre...'}}) }}
        </div>

        <div class="d-flex justify-content-center">
            {{ form_widget(categorieForm.submit , {'attr': {'class': 'btn btn-primary w-25 '}}) }}
        </div>


        {# équivalent de la balise de fermeture du form #}
        {{ form_end(categorieForm) }}
    </section>

{% endblock main %}