{% extends 'front/base.html.twig' %}

{% block main %}

    {{ form_start(userForm) }}
    <section class="border border-grey w-50 mt-5 p-3 m-auto mb-5 bg bg-dark text-light rounded">

        <h1 class="text-center">Créer un compte</h1>

        <div class="m-4 ">
            {{ form_errors(userForm.name) }}
            {#permet de rendre l'input du champs title #}
            {{ form_widget(userForm.name , {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}

        </div>


        <div class="m-4">
            {{ form_errors(userForm.firstname) }}
            {{ form_widget(userForm.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
        </div>

        <div class="m-4">
            {{ form_errors(userForm.password) }}
            {{ form_widget(userForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
        </div>

        <div class="m-4">
            {{ form_errors(userForm.bio) }}
            {{ form_widget(userForm.bio, { 'attr': {'class': 'form-control', 'placeholder' : 'Parler de vous'}}) }}

        </div>

        <div class="m-4">
            {{ form_errors(userForm.city) }}
            {{ form_widget(userForm.city, { 'attr': {'class': 'form-control', 'placeholder' : 'Ville'}}) }}
        </div>

        <div class="m-4">
            {{ form_errors(userForm.email) }}
            {{ form_widget(userForm.email, { 'attr': {'class': 'form-control', 'placeholder' : 'email'}}) }}
        </div>

        <div class="m-4">
            {{ form_errors(userForm.image) }}
            {{ form_widget(userForm.image) }}
        </div>



        <div class="d-flex justify-content-center">
            {{ form_widget(userForm.submit , {'attr': {'class': 'btn btn-primary w-25 '}}) }}
        </div>


        {# équivalent de la balise de fermeture du form #}
        {{ form_end(userForm) }}
    </section>
{% endblock main %}